:root {
  color-scheme: light;
  --bg: #f8fafc;
  --card: #ffffff;
  --text: #1e293b;
  --muted: #64748b;
  --border: #e2e8f0;
  --accent: #3b82f6;
  --accent-strong: #1d4ed8;
  --success: #10b981;
  --warning: #f97316;
  --danger: #ef4444;
  --shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
  --mono: "Fira Code", ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
  --sans: "Fira Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
}

html[data-theme="dark"] {
  color-scheme: dark;
  --bg: #0b1220;
  --card: #111827;
  --text: #f1f5f9;
  --muted: #94a3b8;
  --border: #1f2937;
  --accent: #60a5fa;
  --accent-strong: #3b82f6;
  --success: #34d399;
  --warning: #fb923c;
  --danger: #f87171;
  --shadow: 0 18px 40px rgba(2, 6, 23, 0.5);
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: var(--sans);
  background: var(--bg);
  color: var(--text);
  line-height: 1.5;
}

.page {
  max-width: 1200px;
  margin: 0 auto;
  padding: 32px 28px 60px;
}

.topbar {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 24px;
  margin-bottom: 28px;
}

.eyebrow {
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  color: var(--muted);
}

h1 {
  font-size: 30px;
  margin: 6px 0 4px;
}

.meta {
  font-size: 14px;
  color: var(--muted);
}

.controls {
  display: flex;
  gap: 10px;
}

.toggle {
  border: 1px solid var(--border);
  background: var(--card);
  color: var(--text);
  padding: 8px 12px;
  border-radius: 10px;
  font-size: 12px;
  cursor: pointer;
}

.toggle:hover {
  border-color: var(--accent);
  color: var(--accent-strong);
}

.kpi-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 16px;
  margin-bottom: 24px;
}

.kpi-card {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 16px;
  padding: 18px 20px;
  box-shadow: var(--shadow);
  position: relative;
  overflow: hidden;
}

.kpi-card::before {
  content: "";
  position: absolute;
  inset: 0 0 auto 0;
  height: 3px;
  background: linear-gradient(90deg, var(--accent), transparent);
}

.kpi-primary::before {
  background: linear-gradient(90deg, var(--accent), var(--accent-strong));
}

.kpi-alert::before {
  background: linear-gradient(90deg, var(--danger), var(--warning));
}

.kpi-label {
  font-size: 13px;
  color: var(--muted);
}

.kpi-value {
  font-family: var(--mono);
  font-size: 28px;
  font-weight: 600;
  margin: 8px 0;
}

.kpi-sub {
  font-size: 12px;
  color: var(--muted);
}

.grid-2 {
  display: grid;
  grid-template-columns: 320px 1fr;
  gap: 18px;
}

.trend-card {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 18px;
  padding: 18px 20px;
  box-shadow: var(--shadow);
  margin-bottom: 24px;
}

.trend-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16px;
  margin-bottom: 12px;
}

.trend-title {
  font-weight: 600;
}

.trend-sub {
  font-size: 12px;
  color: var(--muted);
}

.trend-legend {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
  color: var(--muted);
}

.legend-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--accent);
}

.trend-body {
  display: grid;
  grid-template-columns: 1fr 200px;
  gap: 16px;
}

.trend-chart {
  position: relative;
  border: 1px solid var(--border);
  border-radius: 16px;
  padding: 12px;
  background: color-mix(in srgb, var(--bg) 60%, transparent);
  min-height: 210px;
}

.trend-chart svg {
  width: 100%;
  height: 180px;
}

#trend-line {
  fill: none;
  stroke: var(--accent);
  stroke-width: 3;
}

#trend-area {
  fill: color-mix(in srgb, var(--accent) 20%, transparent);
  stroke: none;
}

.trend-empty {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--muted);
  font-size: 12px;
}

.trend-stats {
  display: grid;
  gap: 10px;
}

.trend-stat {
  border: 1px solid var(--border);
  border-radius: 14px;
  padding: 12px;
  background: color-mix(in srgb, var(--bg) 70%, transparent);
}

.trend-label {
  font-size: 12px;
  color: var(--muted);
}

.trend-value {
  font-family: var(--mono);
  font-size: 18px;
  margin-top: 4px;
}

.panel {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 16px;
  padding: 18px 20px;
  box-shadow: var(--shadow);
}

.panel-title {
  font-weight: 600;
  margin-bottom: 4px;
}

.panel-sub {
  font-size: 12px;
  color: var(--muted);
  margin-bottom: 12px;
}

.failing-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: grid;
  gap: 12px;
}

.failing-list li {
  border: 1px solid color-mix(in srgb, var(--danger) 40%, var(--border));
  background: color-mix(in srgb, var(--danger) 10%, var(--card));
  border-radius: 12px;
  padding: 12px;
}

.failing-list .empty {
  border: 1px dashed var(--border);
  background: transparent;
  color: var(--muted);
}

.fail-name {
  font-weight: 600;
}

.fail-meta {
  font-size: 12px;
  color: var(--muted);
  margin-top: 2px;
}

.fail-checks {
  margin-top: 8px;
  font-family: var(--mono);
  font-size: 12px;
  color: var(--danger);
}

.table-wrap {
  max-height: 480px;
  overflow: auto;
  border-radius: 12px;
  border: 1px solid var(--border);
}

table {
  width: 100%;
  border-collapse: collapse;
  font-size: 13px;
}

thead th {
  position: sticky;
  top: 0;
  background: var(--bg);
  color: var(--muted);
  text-align: left;
  padding: 10px 12px;
  border-bottom: 1px solid var(--border);
}

tbody td {
  padding: 10px 12px;
  border-bottom: 1px solid var(--border);
}

tbody tr:nth-child(even) {
  background: color-mix(in srgb, var(--bg) 70%, var(--card));
}

tbody tr:hover {
  background: color-mix(in srgb, var(--accent) 12%, var(--card));
}

.repo-name {
  font-weight: 600;
}

.repo-type {
  color: var(--muted);
  font-family: var(--mono);
  font-size: 12px;
}

.status {
  display: inline-flex;
  align-items: center;
  padding: 2px 8px;
  border-radius: 999px;
  font-size: 12px;
  font-weight: 600;
  border: 1px solid transparent;
}

.status-pass {
  color: var(--success);
  border-color: color-mix(in srgb, var(--success) 40%, transparent);
  background: color-mix(in srgb, var(--success) 12%, transparent);
}

.status-fail {
  color: var(--danger);
  border-color: color-mix(in srgb, var(--danger) 40%, transparent);
  background: color-mix(in srgb, var(--danger) 12%, transparent);
}

.status-na {
  color: var(--muted);
  border-color: color-mix(in srgb, var(--muted) 40%, transparent);
  background: color-mix(in srgb, var(--muted) 12%, transparent);
}

.failing {
  font-family: var(--mono);
  font-size: 12px;
  color: var(--muted);
}

@media (max-width: 960px) {
  .topbar {
    flex-direction: column;
    align-items: flex-start;
  }

  .grid-2 {
    grid-template-columns: 1fr;
  }

  .trend-body {
    grid-template-columns: 1fr;
  }
}
