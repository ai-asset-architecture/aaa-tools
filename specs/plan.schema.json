{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-asset-architecture/specs/plan.schema.json",
  "title": "AAA Init Plan Schema (v0.1)",
  "type": "object",
  "required": ["plan_version", "aaa", "target", "repos", "steps", "reporting"],
  "additionalProperties": false,

  "properties": {
    "plan_version": {
      "type": "string",
      "enum": ["0.1"]
    },

    "aaa": {
      "type": "object",
      "required": ["org", "version_tag", "templates", "actions_repo"],
      "additionalProperties": false,
      "properties": {
        "org": { "type": "string", "minLength": 1 },
        "version_tag": {
          "type": "string",
          "pattern": "^v\\d+\\.\\d+\\.\\d+$"
        },
        "templates": {
          "type": "object",
          "required": ["docs", "service", "frontend"],
          "additionalProperties": false,
          "properties": {
            "docs": { "type": "string", "minLength": 1 },
            "service": { "type": "string", "minLength": 1 },
            "frontend": { "type": "string", "minLength": 1 }
          }
        },
        "actions_repo": { "type": "string", "minLength": 1 }
      }
    },

    "target": {
      "type": "object",
      "required": ["org", "project_slug", "visibility", "default_branch", "mode"],
      "additionalProperties": false,
      "properties": {
        "org": { "type": "string", "minLength": 1 },
        "project_slug": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "visibility": { "type": "string", "enum": ["private", "public"] },
        "default_branch": { "type": "string", "minLength": 1 },
        "mode": { "type": "string", "enum": ["pr", "direct"] }
      }
    },

    "repos": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "type",
          "template",
          "description",
          "owners",
          "required_checks"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_.-]+$",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["docs", "service", "frontend", "other"]
          },
          "template": { "type": "string", "minLength": 1 },
          "description": { "type": "string" },
          "owners": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "required_checks": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" },
            "allOf": [
              { "contains": { "const": "lint" } },
              { "contains": { "const": "test" } },
              { "contains": { "const": "eval" } }
            ]
          }
        },
        "allOf": [
          {
            "if": { "properties": { "type": { "const": "docs" } } },
            "then": {
              "properties": {
                "template": { "const": "aaa-tpl-docs" }
              }
            }
          }
        ]
      }
    },

    "steps": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/step" }
    },

    "reporting": {
      "type": "object",
      "required": ["output_schema_path", "required_fields"],
      "additionalProperties": false,
      "properties": {
        "output_schema_path": { "type": "string", "minLength": 1 },
        "required_fields": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    }
  },

  "$defs": {
    "retry": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "max_attempts": { "type": "integer", "minimum": 0, "maximum": 10 },
        "backoff_seconds": { "type": "integer", "minimum": 0, "maximum": 3600 }
      }
    },

    "when": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mode_equals": { "type": "string", "enum": ["pr", "direct"] }
      }
    },

    "expected": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "required_checks": {
          "type": "array",
          "items": { "type": "string" }
        },
        "status": { "type": "string", "enum": ["pass", "fail", "partial"] }
      }
    },

    "outputs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "collect": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },

    "step": {
      "type": "object",
      "required": ["id", "type", "description", "commands"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:_[a-z0-9]+)*$",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": ["check", "github", "git", "sync", "verify"]
        },
        "description": { "type": "string", "minLength": 1 },

        "commands": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },

        "idempotent": { "type": "boolean" },

        "retry": { "$ref": "#/$defs/retry" },

        "when": { "$ref": "#/$defs/when" },

        "expected": { "$ref": "#/$defs/expected" },

        "outputs": { "$ref": "#/$defs/outputs" }
      }
    }
  }
}
